section.accord#accord--galery
  .container
    .accord__body._accord-js._accord-galery-js
      nav.accord__nav._accord-nav-js
        button(type='button')  blue
        button(type='button')  green
        button(type='button')  coral
        button(type='button')  red
        button(type='button')  all

      .accord__hidden._accord-hidden-js
        .accord-hidden__wrap._accord-hidden-wrap-js
          ul.accord__content._accord-content-js._accord-default-js
            -
              var blocks = [
                {src: './assets/img/img-3.png',data: 'red',},
                {src: './assets/img/img-1.png',data: 'red',},
                {src: './assets/img/img-2.png',data: 'red',},

              ];
            each block in blocks
              li.galery__item.rel.center
                a(href="!#" rel='#popupGalery').galery__img.but-wave.popups-init-js
                  .imgs
                    img(src=block.src alt='img')
          ul.accord__content._accord-content-js
            -
              var blocks = [
                {src: './assets/img/paralax.jpg',data: 'blue',},
                {src: './assets/img/paralax.jpg',data: 'blue',},
                {src: './assets/img/img-2.png',data: 'blue',},
              ];
