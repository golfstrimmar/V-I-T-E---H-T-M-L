include ../../components/mixins

.book-section-form__field.book-section-form__field--info
  .book-section-form__title 
    h3 Hotel complex
  .book-section-form-line
    p Politeness and correctness of the staff?
    ul.vidjets
      +rating("rating1")
  .book-section-form-line
    p Speed and quality of settlement, calculation, eviction?
    ul.vidjets
      +rating("rating2")
  .book-section-form-line
    p Is the room clean?
    ul.vidjets
      +rating("rating3")
  .book-section-form-line
    p What is the appearance of the hotel staff?
    ul.vidjets
      +rating("rating4")
  .book-section-form-line.book-section-form-line--tiers
    p Is it important for you to be able to visit the club with your pets?
    fildset.fildset-radio.fildset-radio--tiers
      input(type="radio" id="tieresyes" name='tieres' value='yes' checked)
      label(for="tieresyes")  Yes
      span /
      input(type="radio" id="tieresnot" name='tieres' value='not')
      label(for="tieresnot")  No
  .book-section-form-line.book-section-form-line--text
    p Your suggestions /wishes
    .textarea-field
      textarea#form-line-1(name="form-line-1" row='20' placeholder="Enter text" )
      label(for='#form-line-1') Enter text

